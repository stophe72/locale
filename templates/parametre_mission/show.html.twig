{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row mb-4 mt-4">
        <h3 class="text-primary"><i class="fa fa-info-circle"></i> {{ page_title }}</h3>
    </div>
    <div class="row">
        <table class="table">
            <tr>
                <th>Nature</th>
                <td>{{ parametreMission.nature.libelle }}</td>
            </tr>
            <tr>
                <th>Protection</th>
                <td>{{ parametreMission.protection.libelle }}</td>
            </tr>
            <tr>
                <th>Lieu de vie</th>
                <td>{{ parametreMission.lieuVie.libellé }}
            </tr>
            <tr>
                <th>Période</th>
                <td>{{ parametreMission.periode }}</td>
            </tr>
            <tr>
                <th>Prestation sociale</th>
                <td>{{ parametreMission.prestationSociale }}
            </tr>
            <tr>
                <th>Ressources</th>
                <td>{{ parametreMission.ressources }}</td>
            </tr>
        </table>
    </div>
    <div class="row">
        <div class="col-2">
            <small>Date de création</small>
        </div>
        <div class="col">
            <small>{{ parametreMission.dateCreation|date("d/m/Y H:i:s") }}</small>
        </div>
    </div>
    {% if parametreMission.dateModification is not null %}
        <div class="row">
            <div class="col-2">
                <small>Date de modification</small>
            </div>
            <div class="col">
                <small>{{ parametreMission.dateModification|date("d/m/Y H:i:s") }}</small>
            </div>
        </div>
    {% endif %}
    <div class="row float-right mx-0">
        <a class="mr-2" href="{{ url_back }}">Retour à la liste</a>
    </div>
{% endblock %}
