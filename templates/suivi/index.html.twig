{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row mt-4 col-sm-6 mb-4">
        <h3 class="text-primary"><i class="fa fa-thumbtack"></i> {{ page_title }}</h3>
        <div class="d-none text-primary spinner-border spinner-border-sm mx-3 align-self-center" id="loadingDiv"></div>
    </div>
    <div class="row mb-4">
        <div class="col text-right">
            <a href="{{ path("user_suivi_add", { id: majeur.id }) }}" class="btn btn-primary"><i class="fas fa-plus-square"></i> Ajouter</a>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Libellé</th>
                    <th>Notes</th>
                    <th></th>
                </tr>
            </thead>
            {% for suivi in suivis %}
                <tr>
                    <td>{{ suivi.dateCreation | date('d/m/Y H:i') }}</td>
                    <td>{{ suivi.libelle }}</td>
                    <td>{{ suivi.notes | ellipsis(50) }}</td>
                    <td class="text-right">
                        <a href="{{ path('user_suivi_edit', {'id': suivi.id}) }}" title="Détails du suivi" class="btn btn-outline-primary btn-sm mr-2">
                            <i class="fa fa-pen"></i> Editer
                        </a>
                        <a href="#" onclick='del_confirm({{ suivi.id }}, "{{ suivi.libelle }}")' type="button" class="btn btn-sm btn-outline-danger">
                            <i class="fa fa-trash"></i> Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div class="row float-right mx-0 mb-3">
        <a class="mr-2 mt-3" href="{{ url_back }}">Retour à la liste</a>
    </div>

    <div class="modal fade" id="yesNoModal" tabindex="-1" role="dialog" aria-labelledby="yesNoModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="yesNoModalLabel">Confirmation</h5>
                </div>
                <div class="modal-body">
                    Supprimer la note ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button id="btn_delete" type="button" class="btn btn-primary">Valider</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript">
    $("#btn_delete").on("click", function(e) {
        var el = document.querySelector('#btn_delete');
        const id = el.dataset.suiviId;

        let url = "{{ path("user_suivi_delete", { "id": 0} ) }}";
        url = url.replace("0", id);
        window.location.href = url;
    });

    function del_confirm(id, name) {
        document.getElementById('btn_delete').dataset.suiviId = id;

        var dialog = $('#yesNoModal');

        dialog.find('.modal-body').text("Supprimer la protection \"" + name + "\" ?");
        dialog.modal('show');
    }
</script>
{% endblock %}