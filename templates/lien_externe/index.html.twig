{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row mt-4 col-sm-6 mb-4">
        <h3 class="text-primary"><i class="fa fa-link"></i> {{ page_title }}</h3>
        <div class="d-none text-primary spinner-border spinner-border-sm mx-3 align-self-center" id="loadingDiv"></div>
    </div>
    <div class="row mb-4">
        <div class="col text-right">
            <a href="{{ path("user_lienexterne_add") }}" class="btn btn-primary"><i class="fas fa-plus-square"></i> Ajouter</a>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Libellé</th>
                    <th>URL</th>
                    <th>Visible</th>
                    <th></th>
                </tr>
            </thead>
            {% for lien in lienExternes %}
                <tr>
                    <td>{{ lien.libelle }}</td>
                    <td><a href="{{ lien.url }}" target="blank">{{ lien.url }}</a></td>
                    <td>{% if lien.visible %}<i class="fas fa-check text-success"></i>{% endif %}</td>
                    <td class="text-right">
                        <a href="{{ path('user_lienexterne_edit', {'id': lien.id}) }}" title="Détails du lien externe" class="btn btn-outline-primary btn-sm mr-2">
                            <i class="fa fa-pen"></i> Editer
                        </a>
                        <a href="#" onclick='del_confirm({{ lien.id }}, "{{ lien.libelle }}")' type="button" class="btn btn-sm btn-outline-danger">
                            <i class="fa fa-trash"></i> Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

    <div class="modal fade" id="yesNoModal" tabindex="-1" role="dialog" aria-labelledby="yesNoModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="yesNoModalLabel">Confirmation</h5>
                </div>
                <div class="modal-body">
                    Supprimer la lien ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button id="btn_delete" type="button" class="btn btn-primary">Valider</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript">
    $("#btn_delete").on("click", function(e) {
        var el = document.querySelector('#btn_delete');
        const id = el.dataset.lienId;

        var url = "{{ path('user_lienexterne_delete', { 'id': 0 }) }}";
        url = url.replace('0', id);

        window.location.href = url;
    });

    function del_confirm(id, name) {
        document.getElementById('btn_delete').dataset.lienId = id;

        var dialog = $('#yesNoModal');

        dialog.find('.modal-body').text("Supprimer le lien externe " + name + " ?");
        dialog.modal('show');
    }
</script>
{% endblock %}