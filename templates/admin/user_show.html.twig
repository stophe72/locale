{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row mb-4 mt-4">
        <h3 class="text-primary"><i class="fa fa-info-circle"></i> {{ page_title }}</h3>
    </div>
    <div class="row">
        <table class="table">
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Groupe</th>
                <td>{{ user.groupe }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles|join(', ', ' et ') }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse.adresse1 }}</td>
            </tr>
            <tr>
                <th>Complément d'adresse</th>
                <td>{{ user.adresse.adresse2 }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ user.adresse.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.adresse.  ville }}</td>
            </tr>
        </table>
    </div>
    <div class="row">
        <div class="col-2">
            <small>Date de création</small>
        </div>
        <div class="col">
            <small>{{ user.dateCreation|date("d/m/Y H:i:s") }}</small>
        </div>
    </div>
    {% if user.dateModification is not null %}
        <div class="row">
            <div class="col-2">
                <small>Date de modification</small>
            </div>
            <div class="col">
                <small>{{ user.dateModification|date("d/m/Y H:i:s") }}</small>
            </div>
        </div>
    {% endif %}
    <div class="row float-right mx-0 mb-3">
        <a class="mr-2" href="{{ url_back }}">Retour à la liste</a>
    </div>
{% endblock %}
