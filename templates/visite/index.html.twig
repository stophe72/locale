{% extends 'layout_fluid.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block content %}
    <div class="row my-4">
        <div class="col-sm-6 offset-2">
            <h3 class="text-primary"><i class="fa fa-handshake"></i> {{ page_title }}</h3>
            <div class="d-none text-primary spinner-border spinner-border-sm mx-3 align-self-center" id="loadingDiv"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 mt-2">
            {{ form_start(form) }}
                {{ form_row(form.dateDebut) }}
                {{ form_row(form.dateFin) }}
                {{ form_row(form.majeurNom) }}
                {{ form_row(form.majeurId) }}
                <div class="float-right mt-3">
                    <button id="btn_filtrer" type="submit" class="btn btn-outline-secondary">
                        <i class="fa fa-filter"></i> Appliquer</button>
                    <button id="btnClearFilters" type="button" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i></button>
                </div>
            {{ form_end(form) }}
        </div>
        <div class="col-sm-8">
            {% include 'generic/pagination_header.html.twig' with
                {
                    'no_row' : 'Aucune visite',
                    'one_row': 'Une visite',
                    'rows'   : 'visites',
                    'url_add': path("user_visite_add")
                }
            %}

            {% if pagination.items|length == 0 %}
                <div class="alert alert-success mt-3">Aucune visite</div>
            {% else %}
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Majeur</th>
                            <th>Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    {% for visite in pagination %}
                        <tr>
                            <td>{{ visite.majeur.nom }} {{ visite.majeur.prenom }}</td>
                            <td>{{ visite.date|date('d/m/Y') }}</td>
                            <td class="col-sm-4 text-right">
                                <a href="{{ path('user_visite_edit', {'id': visite.id}) }}" title="DÃ©tails de la visite" class="btn btn-outline-primary btn-sm mr-2">
                                    <i class="fa fa-pen"></i> Editer
                                </a>
                                <a href="#" onclick='del_confirm({{ visite.id }}, "{{ visite.date|date("d/m/Y") }}")' type="button" class="btn btn-sm btn-outline-danger">
                                    <i class="fa fa-trash"></i> Supprimer
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
                <div class="pagination justify-content-center pt-3">
                    {{ knp_pagination_render(pagination) }}
                </div>
            {% endif %}
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                </div>
                <div class="modal-body">
                    Supprimer la visite ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button id="btn_delete" type="button" class="btn btn-primary">Valider</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript">
    let majeurName = $("#visite_filter_majeurNom");
    let majeurId = $("#visite_filter_majeurId");

    majeurName.autocomplete({
        debounce: 500,
        source: function(request, response) {
            $.ajax({
                url: "{{ path('ajax_majeurs_get_by_name') }}",
                type: "post",
                dataType: "json",
                data: {
                    name: request.term
                },
                success: function(data) {
                    response(data);
                }
            });
        },
        focus: function(event, ui) {
            event.preventDefault();
            majeurName.val(ui.item.label);
        },
        select: function(event, ui) {
            event.preventDefault();
            majeurName.val(ui.item.label);
            majeurId.val(ui.item.value);

            return false;
        }
    });

    $('#btnClearFilters').on('click', function(e) {
        $.ajax({
            url: "{{ path('ajax_visite_clear_filter') }}",
            dataType: "json",
            data: {
                clearVisiteFilter: 1
            },

            success: function (reponse)
            {
                window.location.href = "{{ path('user_visites') }}";
            },
        });
    });

    $("#btn_delete").on("click", function(e) {
        var el = document.querySelector('#btn_delete');
        const id = el.dataset.visiteId;

        var url = "{{ path('user_visite_delete', {'id': 0}) }}";
        url = url.replace('0', id);

        window.location.href = url;
    });

    function del_confirm(id, name) {
        document.getElementById('btn_delete').dataset.visiteId = id;

        var dialog = $('#exampleModal');

        dialog.find('.modal-body').text("Supprimer visite du " + name + " ?");
        dialog.modal('show');
    }
</script>
{% endblock %}